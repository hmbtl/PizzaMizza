<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pizzabg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/main_page_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:background="@drawable/welcome_bg"
        android:gravity="center"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/main_page_head"
        android:src="@drawable/shadow_bottom" />

    <Button
        android:id="@+id/delivery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/red_button_selector"
        android:padding="10dp"
        android:text="@string/delivery"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/shadow_btm1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/delivery"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/shadow_bottom" />

    <Button
        android:id="@+id/carry_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/shadow_btm1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/red_button_selector"
        android:padding="10dp"
        android:text="@string/carry_out"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/shadow_btm2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/carry_out"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/shadow_bottom" />



    <LinearLayout
        android:id="@+id/main_page_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="10dp"
      android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textSize="13sp"
            android:paddingBottom="2dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#44000000"
            android:orientation="horizontal">


            <ImageView
                style="@style/ImageSelector"
                android:id="@+id/locale_az_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/az2"
                />

            <ImageView
                style="@style/ImageSelector"
                android:id="@+id/locale_en_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/en2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="true"
                />
            <ImageView
                android:clickable="true"
                style="@style/ImageSelector"
                android:id="@+id/locale_ru_button"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/ru2"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/anar/Android/PizzaMizza/pizzaMizza/src/main/res/layout/activity_main.xml -->