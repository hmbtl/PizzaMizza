<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_main"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gyro"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView 
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_menu"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        
        />

    <ImageView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/pizzamizza_logo"
        android:visibility="visible" />

</LinearLayout><!-- From: file:/Users/anar/Android/PizzaMizza/pizzaMizza/src/main/res/layout/splash_layout.xml -->