<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_font"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/order_select"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="14"
        android:background="@drawable/white_button_selector"
        android:paddingBottom="5dp">


        <ImageView
            android:id="@+id/order_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#ffb7b7b7"
            android:scaleType="centerCrop"
            android:src="@drawable/drinks" />


        <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/order_price"
            android:layout_toRightOf="@+id/order_icon"
            android:text="MARGHERITTA"
            android:textColor="#d50032"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/order_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_name"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/order_icon"
            android:text="@string/large"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal" />

        <!--<TextView-->
            <!--android:id="@+id/order_double_cheese"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/order_name"-->
            <!--android:layout_marginTop="-2dp"-->
            <!--android:layout_toRightOf="@+id/order_size"-->
            <!--android:text=""-->
            <!--android:paddingLeft="5dp"-->
            <!--android:textColor="#000000"-->
            <!--android:textSize="15sp"-->
            <!--android:textStyle="normal" />-->


        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:text="12.99$"
            android:textColor="#686868"
            android:textSize="14sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/order_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_size"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/order_icon"
            android:paddingRight="5dp"
            android:text="tomat sousu\n\n\nnasfa"
            android:textColor="#686868"
            android:gravity="bottom"
            android:textSize="14sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/order_qty"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:background="@drawable/qty_badge"
            android:gravity="center"
            android:text="12"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />


        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="5dp"-->
        <!--android:src="@drawable/shadow_bottom" />-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remove_rl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="3"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/edit_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#de1623"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="#FFF"
            android:textSize="13sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/shadow_right" />
    </RelativeLayout>


</LinearLayout>

