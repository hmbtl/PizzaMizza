<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lr_quick_order"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="visible" >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="@string/quantity"
            android:textColor="#d50032"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/detail_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:paddingLeft="7dp"
            android:text="1"
            android:textColor="#d50032"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="right|center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/detail_count_minus"
            style="@style/ImageSelector"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/minus_red"
            android:tint="#d50032" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#44000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/detail_count_plus"
            style="@style/ImageSelector"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/plus_green"
            android:tint="#55BE47" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/anar/Android/PizzaMizza/pizzaMizza/src/main/res/layout/detail_quantity_select_item.xml -->