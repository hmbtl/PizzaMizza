<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/selected_size"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/appbar_green"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/selected_size_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="MEDIUM"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/size_indicator"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:padding="18dp"
            android:scaleType="fitEnd"
            android:src="@drawable/down_arrow"
            android:tint="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/size_selection_small"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/white_button_selector"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="@string/small"
            android:textColor="#d50032"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/size_selection_small_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="37cm"
            android:textColor="#d50032"
            android:textSize="22sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaa"
        />

    <LinearLayout
        android:id="@+id/size_selection_medium"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/white_button_selector"
        android:orientation="horizontal" >

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="@string/medium"
            android:textColor="#d50032"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/size_selection_medium_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="24cm"
            android:textColor="#d50032"
            android:textSize="22sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaa"
        />

      <LinearLayout
    android:id="@+id/size_selection_large"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@drawable/white_button_selector"
    android:orientation="horizontal" >

    <TextView

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:text="@string/large"
        android:textColor="#d50032"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/size_selection_large_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:text="32cm"
        android:textColor="#d50032"
        android:textSize="22sp" />
</LinearLayout>

