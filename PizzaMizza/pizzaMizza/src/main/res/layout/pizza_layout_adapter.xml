<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_font"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="5dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/pizza_shadow_left"
        android:src="@drawable/shadow" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/pizza_shadow_left"
        android:layout_height="140dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/white_button_selector">


        <TextView
            android:id="@+id/pizza_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/pizza_icon"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:text="SALAD CLASSIKO"
            android:textColor="#d50032"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/pizza_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/pizza_title"
            android:layout_toLeftOf="@+id/pizza_icon"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Pizza pendiri, oregano , dana eti, toyuqoregano , dana eti, toyuqoregano , dana eti, toyuq"
            android:textColor="#101820"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/pizza_icon"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/foodloading" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/pizza_shadow_left"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/shadow_bottom" />


</RelativeLayout>