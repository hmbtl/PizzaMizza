<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    
    android:background="#D8D8D8"
    android:layout_height="match_parent">


    <include
        layout="@layout/actionbar_items"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFF"
        >





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DE1623"
            android:text="@string/relax_your_order_is_placed"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date 12/10/2015 20:14"
            android:id="@+id/placeorder_date"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="#686868"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="order #110012"
            android:id="@+id/placeorder_id"
            android:textStyle="bold"
android:textSize="15sp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/placeorder_date"
            android:textColor="#686868"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="carry out"
            android:id="@+id/placeorder_type"
            android:textSize="15sp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/placeorder_id"
            android:textColor="#686868"
            />




    </RelativeLayout>

   <ImageView
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:src ="@drawable/shadow_bottom"

    />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#DE1623"
        >


        <ImageView
            android:id="@+id/placeorder_call_button"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/callbutton_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bəsti bağırova 2a, az1065, baku"
            android:id="@+id/storeinfo_address"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="#FFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone *1415"
            android:textSize="15sp"
            android:layout_marginBottom="2dp"
            android:id="@+id/storeinfo_phone"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/storeinfo_address"
            android:textColor="#FFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="store info"
            android:textSize="15sp"
            android:layout_marginBottom="2dp"
            android:textStyle="bold"
            android:id="@+id/storeinfo_label"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/storeinfo_phone"
            android:textColor="#FFF"
            />



    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src ="@drawable/shadow_bottom"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/order_details"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:gravity="left|bottom"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:background="#55BE47"
       />


    <ListView
        android:layout_width="match_parent"
        android:listSelector="@android:color/transparent"
        android:divider="#ffb8b8b8"
        android:id="@+id/placeorder_list"
        android:scrollbars="none"
        android:footerDividersEnabled="false"
        android:background="#fff2f2f2"
        android:dividerHeight="1dp"
        android:layout_height="match_parent"/>


</LinearLayout>